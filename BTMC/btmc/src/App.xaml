<Application x:Class="btmc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="ui/forms/main/Main.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- existing theme -->
        <ResourceDictionary Source="pack://application:,,,/src/ui/resources/theme/General.xaml"/>

        <!-- your new files -->
        <ResourceDictionary Source="pack://application:,,,/src/ui/resources/theme/Theme.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/src/ui/resources/theme/FormMetrics.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/src/ui/resources/theme/Controls.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
