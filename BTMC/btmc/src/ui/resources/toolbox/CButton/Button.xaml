<!--Custom Button-->
<Button x:Class="btmc.src.ui.resources.toolbox.CButton.Button"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:btmc.src.ui.resources.toolbox.CButton"
        mc:Ignorable="d">

    <Button.Resources>
        <ResourceDictionary Source="./Button.style.xaml" />
    </Button.Resources>

    <Button.Style>
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource Button.Style}" />
    </Button.Style>
</Button>