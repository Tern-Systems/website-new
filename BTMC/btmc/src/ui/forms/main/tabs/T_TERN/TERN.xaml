<UserControl x:Class="btmc.src.ui.forms.main.tabs.T_TERN.TERN"
             xmlns:alu="clr-namespace:btmc.src.alu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:btmc.src.ui.forms.main.tabs.T_TERN"
             xmlns:components="clr-namespace:btmc.src.ui.forms.main.components"
             mc:Ignorable="d">
    
    <StackPanel Margin="10">
        <!-- Input 1 -->
        <StackPanel Orientation="Horizontal" Width="600">
            <TextBlock Text="Input 1:" Foreground="White" Margin="25,10" FontSize="20"/>
            <components:TextBoxWithToolsControl x:Name="txtInput1" Width="463" Height="35" Margin="5"
                                        TextValue="{Binding Input1Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                        PlaceholderText="Enter value..."/>
        </StackPanel>

        <!-- Instruction ComboBox and Swap Button -->
        <StackPanel Orientation="Horizontal" Width="600" HorizontalAlignment="Right">
            <TextBlock Text="Instruction:" Foreground="White" Margin="80,20,10,20" FontSize="20"/>
            <components:ComboBoxControl x:Name="cmbInstructionOp" Width="160" Height="35" Margin="5"
                                 ItemsSource="{Binding Source={x:Static alu:ALU.Operations}}"
                                 SelectedItem="{Binding InstructionOperation, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                 PlaceholderText="Select instruction..."/>
            <components:SwapButtonControl x:Name="swapButton" Width="40" Height="35" Margin="10" 
                                  ToolTipText="Swaps input1 and input2" SwapClicked="SwapButton_SwapClicked"/>
        </StackPanel>

        <!-- Input 2 -->
        <StackPanel Orientation="Horizontal" Width="600">
            <TextBlock Text="Input 2:" Foreground="White" Margin="25,10" FontSize="20"/>
            <components:TextBoxWithToolsControl x:Name="txtInput2" Width="463" Height="35" Margin="5"
                                        TextValue="{Binding Input2Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                        PlaceholderText="Enter value..."/>
        </StackPanel>

        <!-- Output -->
        <StackPanel Orientation="Horizontal" Width="600">
            <TextBlock Text="Output:" Foreground="White" Margin="25,10" FontSize="20"/>
            <components:TextBoxWithToolsControl x:Name="txtOutput1" Width="463" Height="35" Margin="5"
                                        TextValue="{Binding OutputValue, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                        PlaceholderText="Output..."/>
        </StackPanel>
    </StackPanel>
</UserControl>
