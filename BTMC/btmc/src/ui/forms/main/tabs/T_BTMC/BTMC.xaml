<UserControl x:Class="btmc.src.ui.forms.main.tabs.T_BTMC.BTMC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:btmc.src.ui.forms.main.components"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/btmc;component/src/ui/forms/main/Form.style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Input Row -->
        <TextBlock Grid.Row="1" 
                   Grid.Column="0" 
                   Text="Input:" 
                   Foreground="White" 
                   FontFamily="{StaticResource FontFamily.Gothic}" 
                   VerticalAlignment="Center"
                   Margin="12,0,0,0" 
                   FontSize="18"/>
        <ComboBox x:Name="InputComboBox" 
                  Grid.Row="1" 
                  Grid.Column="1" 
                  Height="36" 
                  Margin="0,0,10,0"
                  Style="{StaticResource FlatComboBoxStyle}" 
                  SelectedIndex="0">
            <ComboBoxItem Content="select" Foreground="{StaticResource Color.Gray.179}" FontFamily="{StaticResource FontFamily.Gothic}" />
            <ComboBoxItem Content="option 1" Foreground="White" FontFamily="{StaticResource FontFamily.Gothic}"/>
            <ComboBoxItem Content="option 2" Foreground="White" FontFamily="{StaticResource FontFamily.Gothic}"/>
        </ComboBox>
        
        <!-- Input TextBox -->
        <Grid Grid.Row="1" Grid.Column="2" Height="36" Margin="0, 20">
            <TextBox x:Name="InputTextBox"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Padding="6,0,60,0" 
                     VerticalContentAlignment="Center"
                     Text="input..." 
                     Foreground="{StaticResource Color.Gray.179}" 
                     FontFamily="{StaticResource FontFamily.Gothic}" 
                     FontSize="18"
                     GotFocus="RemovePlaceholder" 
                     LostFocus="RestorePlaceholder" 
                     Cursor="Pen"/>
            
            <!-- Overlay for buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0">
                <Button ToolTip="Copy"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" 
                        Height="24">
                    <Image Source="/btmc;component/assets/icons/copy.png" Width="16"/>
                </Button>
                <Button ToolTip="Paste"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" 
                        Height="24">
                    <Image Source="/btmc;component/assets/icons/paste.png" Width="16"/>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Swap -->
        <Button Grid.Row="2" 
                Grid.Column="0" 
                Grid.ColumnSpan="3"
                Style="{StaticResource SwapButtonStyle}"
                HorizontalAlignment="Center"
                Margin="0, 10, 0, 20"
                Cursor="Hand"
                ToolTip="Swap"/>
        
        <!-- Output Row -->
        <TextBlock Grid.Row="3" 
                   Grid.Column="0" 
                   Text="Output:" 
                   Foreground="White" 
                   FontFamily="{StaticResource FontFamily.Gothic}" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0" 
                   FontSize="18"/>
        <ComboBox x:Name="OutputComboBox" 
                  Grid.Row="3" 
                  Grid.Column="1" 
                  Height="36" 
                  Margin="0,0,10,0"
                  Style="{StaticResource FlatComboBoxStyle}" 
                  SelectedIndex="0">
            <ComboBoxItem Content="select" Foreground="{StaticResource Color.Gray.179}" FontFamily="{StaticResource FontFamily.Gothic}"/>
            <ComboBoxItem Content="option 1" Foreground="White" FontFamily="{StaticResource FontFamily.Gothic}"/>
            <ComboBoxItem Content="option 2" Foreground="White" FontFamily="{StaticResource FontFamily.Gothic}"/>
        </ComboBox>
        
        <!-- Output TextBox -->
        <Grid Grid.Row="3" Grid.Column="2" Height="36">
            <TextBox x:Name="OutputTextBox"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Padding="6,0,60,0"
                     VerticalContentAlignment="Center"
                     Text="output..." 
                     Foreground="{StaticResource Color.Gray.179}" 
                     FontFamily="{StaticResource FontFamily.Gothic}" 
                     FontSize="18"
                     GotFocus="RemovePlaceholder" 
                     LostFocus="RestorePlaceholder"
                     Cursor="Pen"/>
            
            <!-- Overlay buttons inside TextBox -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0">
                <Button ToolTip="Copy"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" 
                        Height="24">
                    <Image Source="/btmc;component/assets/icons/copy.png" Width="16"/>
                </Button>
                <Button ToolTip="Paste"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" 
                        Height="24">
                    <Image Source="/btmc;component/assets/icons/paste.png" Width="16"/>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Convert Button -->
        <Button Grid.Row="4" 
                Grid.Column="0" 
                Grid.ColumnSpan="3" 
                Content="Convert"
                Style="{StaticResource PrimaryButtonStyle}" 
                HorizontalAlignment="Center" 
                Margin="0,30,0,0"
                Cursor="Hand"
                ToolTip="Convert"/>
    </Grid>
</UserControl>