<UserControl x:Class="btmc.src.ui.forms.main.components.TextBoxWithToolsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Border CornerRadius="5" Background="#808080" BorderBrush="White" BorderThickness="1">
        <Grid>
            <Grid>
                <TextBox x:Name="textBox" Background="#808080" BorderThickness="0"
                         Padding="5,0,60,0" VerticalContentAlignment="Center" Foreground="White"
                         Text="{Binding TextValue, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                         TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                <TextBlock x:Name="placeholder" Text="{Binding PlaceholderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="LightGray" Margin="10,0,0,0" VerticalAlignment="Center"
                           IsHitTestVisible="False" />
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="BtnCopy_Click" Background="Transparent" Width="30" Height="30" BorderThickness="0">
                    <Image Source="/assets/icons/copy.png" Width="24" Height="24"/>
                </Button>
                <Button Click="BtnPaste_Click" Background="Transparent" Width="30" Height="30" BorderThickness="0">
                    <Image Source="/assets/icons/paste.png" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
