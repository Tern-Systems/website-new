<!--Swap Button-->
<Button x:Class="btmc.src.ui.forms.main.components.Swap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:btmc.src.ui.forms.main.components"
        xmlns:toolbox="clr-namespace:btmc.src.ui.resources.toolbox"
        mc:Ignorable="d">

    <Button.Resources>
        <ControlTemplate x:Key="Swap.Template"
                         TargetType="{x:Type Button}">
            <toolbox:Button Height="{StaticResource Form.Element.Height}"
                            Width="{StaticResource Form.Element.Height}"
                            BorderBrush="{StaticResource Color.White}"
                            BorderThickness="{StaticResource Border.S}"
                            Background="{StaticResource Color.Gray.128}">
                <toolbox:Button.Resources>
                    <ResourceDictionary>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Effect"
                                    Value="{StaticResource Shadow.S}" />
                        </Style>
                    </ResourceDictionary>
                </toolbox:Button.Resources>
                <Path HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M 0,16  L 6,22 6,0  M 10,24.4  L 10,2.3 16,8"
                      Stroke="{StaticResource Color.White}"
                      StrokeThickness="{StaticResource Stroke.N}" />
            </toolbox:Button>
        </ControlTemplate>

        <Style x:Key="Swap.Style"
               TargetType="{x:Type Button}">
            <Setter Property="Template"
                    Value="{StaticResource Swap.Template}" />
        </Style>
    </Button.Resources>

    <Button.Style>
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource Swap.Style}" />
    </Button.Style>

</Button>
