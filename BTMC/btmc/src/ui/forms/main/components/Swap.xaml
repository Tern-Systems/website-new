<Button x:Class="btmc.src.ui.forms.main.components.Swap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d">

    <Button.Resources>

        <!-- Custom icon-based template -->
        <ControlTemplate x:Key="Swap.Template" TargetType="{x:Type Button}">
            <Border Background="{StaticResource Color.Gray.128}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}"
                    CornerRadius="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      ShadowDepth="2"
                                      Direction="315"
                                      Color="Black"
                                      Opacity="0.3" />
                </Border.Effect>

                <!-- Icon Path -->
                <Path HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M 0,16  L 6,22 6,0  M 10,24.4  L 10,2.3 16,8"
                      Stroke="{TemplateBinding Foreground}"
                      StrokeThickness="1"/>
            </Border>
        </ControlTemplate>

        <!-- Style using the above template -->
        <Style x:Key="Swap.Style" TargetType="{x:Type Button}">
            <Setter Property="Template" Value="{StaticResource Swap.Template}" />
        </Style>

    </Button.Resources>

    <!-- Apply the style -->
    <Button.Style>
        <StaticResource ResourceKey="Swap.Style" />
    </Button.Style>
</Button>
