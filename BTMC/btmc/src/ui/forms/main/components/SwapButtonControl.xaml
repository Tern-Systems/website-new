<UserControl x:Class="btmc.src.ui.forms.main.components.SwapButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Border CornerRadius="5" BorderThickness="1" BorderBrush="White" Background="Gray" 
            ToolTip="{Binding ToolTipText, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3"
                              BlurRadius="2" Opacity="0.5"/>
        </Border.Effect>
        <Button Content="⥯" Click="BtnSwap_Click" FontSize="25" Foreground="White" Background="Transparent" BorderThickness="0"/>
    </Border>
</UserControl>