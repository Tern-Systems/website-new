<Window x:Class="btmc.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:tab="clr-namespace:btmc.src.ui.forms.main.tabs"
        xmlns:components="clr-namespace:btmc.src.ui.forms.main.components"
        xmlns:toolbox="clr-namespace:btmc.src.ui.resources.toolbox.CButton"
        mc:Ignorable="d"
        Title="Converter"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="#FF1E1E1E"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="Adobe Gothic Std L">

    <Window.Resources>
        <ResourceDictionary>
            
            <sys:Double x:Key="ActionButton.Size">15</sys:Double>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource Color.Gray.77}" CornerRadius="10" BorderThickness="1" BorderBrush="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="5,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Low-Level Language Calculator"
                               Foreground="White"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Grid.Column="0" />

                    <!-- Minimize + Close -->
                    <StackPanel Orientation="Horizontal"
                                Grid.Column="1"
                                VerticalAlignment="Center">
                        <toolbox:CustomButton Width="30"
                                              Height="30"
                                              Content="-"
                                              ToolTip="Minimize"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              FontFamily="{StaticResource FontFamily.GothicBold}"
                                              FontSize="{StaticResource ActionButton.Size}"
                                              Background="Transparent"
                                              Foreground="White"
                                              Cursor="Hand"
                                              Click="BtnMinimize_Click"
                                              Padding="0" />
                        
                        <toolbox:CustomButton Width="30"
                                              Height="30"
                                              Content="×"
                                              ToolTip="Close"
                                              FontFamily="{StaticResource FontFamily.GothicBold}"
                                              FontSize="{StaticResource ActionButton.Size}"
                                              VerticalContentAlignment="Center"
                                              HorizontalContentAlignment="Center"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="White"
                                              Cursor="Hand"
                                              Click="BtnClose_Click"
                                              Padding="0" />
                    </StackPanel>
                </Grid>

                <!-- Separator -->
                <Separator Grid.Row="1"
                           Background="White"
                           Height="1"
                           Margin="0,10,0,0"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TabControl with actual content in each TabItem -->
                <TabControl x:Name="tcMain"
                            Style="{StaticResource ToggleContainerTabControlStyle}"
                            SelectionChanged="TcMain_SectionChanged"
                            VerticalAlignment="Stretch"
                            Grid.Column="0"
                            Background="Transparent"
                            MinHeight="200">
                    <TabItem Header="BTMC" Style="{StaticResource LeftTabItemStyle}">
                        <tab:BTMC x:Name="BTMCLayout" />
                    </TabItem>
                    <TabItem Header="TERN" Style="{StaticResource RightTabItemStyle}">
                        <tab:TERN x:Name="TERNLayout" />
                    </TabItem>
                </TabControl>

                <!-- Clear icon -->
                <components:Clear Grid.Column="1"
                                  Margin="10,0,0,0"
                                  VerticalAlignment="Top"
                                  ToolTip="Clear"
                                  BorderThickness="0"
                                  Padding="5"
                                  Foreground="White"
                                  Cursor="Hand"
                                  Click="BtnClean_Click"/>
            </Grid>

            <!-- Convert Button -->
            <toolbox:CustomButton Grid.Row="2"
                                  Content="Convert"
                                  FontFamily="{StaticResource FontFamily.GothicBold}"
                                  Width="100"
                                  Height="25"
                                  Margin="0,20,50,50"
                                  HorizontalAlignment="Center"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  CornerRadius="16"
                                  Background="#2483d8"
                                  Padding="6,2"
                                  Foreground="White"
                                  Cursor="Hand"
                                  Click="BtnConvert_Click"/>
        </Grid>
    </Border>
</Window>
