<Window x:Class="btmc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BTMC Tool"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{StaticResource AppFont}">

	<Border Background="{StaticResource Brush.Gray77}">
		<Grid Margin="20" Width="713">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="1"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Header -->
			<Grid Grid.Row="0" Height="30">
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0"
						   Text="Low-Level Language Calculator"
						   FontSize="18"
						   FontWeight="Bold"
						   Foreground="White"
						   VerticalAlignment="Center"
						   Margin="10,0"/>
				<StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
					<Button x:Name="BtnMinimize"
							Content="−"
							Width="30" Height="25"
							Background="Transparent"
							BorderThickness="0"
							Foreground="White"
							Click="BtnMinimize_Click"/>
					<Button x:Name="BtnClose"
							Content="✕"
							Width="30" Height="25"
							Background="Transparent"
							BorderThickness="0"
							Foreground="White"
							Click="BtnClose_Click"/>
				</StackPanel>
			</Grid>

			<!-- Divider -->
			<Border Grid.Row="1"
					Height="1"
					Background="White"
					Grid.ColumnSpan="2"/>

			<!-- Toggle + Clean -->
			<Grid Grid.Row="2" Margin="0,20,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!-- Pill Toggle -->
				<ToggleButton x:Name="ToggleSwitch"
							  Grid.Column="0"
							  IsChecked="True"
							  Click="ToggleSwitch_Click"
							  Style="{StaticResource PillToggle}"/>

				<!-- Clean -->
				<Button x:Name="BtnClean"
						Grid.Column="1"
						Width="30" Height="30"
						Background="Transparent"
						BorderThickness="0"
						Margin="10,0,0,0"
						Click="BtnClean_Click">
					<Image Source="pack://application:,,,/btmc;component/Assets/icons/broom.png"
						   Width="{StaticResource Icon.Medium}"
						   Height="{StaticResource Icon.Medium}"/>
				</Button>
			</Grid>

			<!-- BTMC InputSection -->
			<Grid x:Name="InputSection" Grid.Row="3" Margin="0,20,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="150"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0"
						   Text="   Input:"
						   VerticalAlignment="Center"
						   Foreground="White"
						   Margin="0,0,5,0"/>
				<ComboBox x:Name="InputModeCombo"
						  Grid.Column="1"
						  Style="{StaticResource RoundedComboBox}">
					<ComboBoxItem Content="select" IsSelected="True"/>
					<ComboBoxItem Content="1"/>
					<ComboBoxItem Content="2"/>
					<ComboBoxItem Content="3"/>
					<ComboBoxItem Content="4"/>
				</ComboBox>
				<Border Grid.Column="3"
						Background="{StaticResource Brush.ToggleBackground}"
						CornerRadius="{StaticResource Corner.Standard}"
						Height="{StaticResource Height.Standard}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition Width="30"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="InputBox"
								 Grid.Column="0"
								 Tag="input.."
								 Text="input.."
								 Foreground="Gray"
								 Background="Transparent"
								 BorderThickness="0"
								 Padding="10,0"
								 VerticalContentAlignment="Center"
								 GotFocus="TextBox_GotFocus"
								 LostFocus="TextBox_LostFocus"/>
						<Button Grid.Column="1"
								Click="BtnCopyInput1_Click"
								Background="Transparent"
								BorderThickness="0"
								Margin="0,0,5,0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/copy.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
						<Button Grid.Column="2"
								Click="BtnPasteInput1_Click"
								Background="Transparent"
								BorderThickness="0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/paste.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
					</Grid>
				</Border>
			</Grid>

			<!-- Reverse -->
			<Button x:Name="ReverseButton"
					Grid.Row="4"
					Content="⇅"
					Width="30" Height="30"
					Background="{StaticResource Brush.ToggleBorderHover}"
					BorderThickness="0"
					Foreground="White"
					HorizontalAlignment="Center"
					Margin="0,20,0,10"
					Click="BtnSwapInputs_Click"/>

			<!-- BTMC OutputSection -->
			<Grid x:Name="OutputSection" Grid.Row="5" Margin="0,10,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="150"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0"
						   Text="Output:"
						   VerticalAlignment="Center"
						   Foreground="White"
						   Margin="0,0,5,0"/>
				<ComboBox x:Name="OutputModeCombo"
						  Grid.Column="1"
						  Style="{StaticResource RoundedComboBox}">
					<ComboBoxItem Content="select" IsSelected="True"/>
				</ComboBox>
				<Border Grid.Column="3"
						Background="{StaticResource Brush.ToggleBackground}"
						CornerRadius="{StaticResource Corner.Standard}"
						Height="{StaticResource Height.Standard}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition Width="30"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="OutputBox"
								 Grid.Column="0"
								 Tag="output.."
								 Text="output.."
								 Foreground="Gray"
								 Background="Transparent"
								 BorderThickness="0"
								 Padding="10,0"
								 VerticalContentAlignment="Center"
								 IsReadOnly="True"
								 GotFocus="TextBox_GotFocus"
								 LostFocus="TextBox_LostFocus"/>
						<Button Grid.Column="1"
								Click="BtnCopyOutput_Click"
								Background="Transparent"
								BorderThickness="0"
								Margin="0,0,5,0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/copy.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
						<Button Grid.Column="2"
								Click="BtnPasteOutput_Click"
								Background="Transparent"
								BorderThickness="0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/paste.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
					</Grid>
				</Border>
			</Grid>

			<!-- TERN Section -->
			<Grid x:Name="TERNSection"
				  Grid.Row="3" Grid.RowSpan="3"
				  Margin="0,20,0,0"
				  Visibility="Collapsed">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!-- Input1 -->
				<TextBlock Grid.Row="0" Grid.Column="0"
						   Text="Input 1:"
						   Foreground="White"
						   VerticalAlignment="Center"
						   Margin="0,0,5,0"/>
				<Border Grid.Row="0" Grid.Column="1"
						Background="{StaticResource Brush.ToggleBackground}"
						CornerRadius="{StaticResource Corner.Standard}"
						Height="{StaticResource Height.Standard}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition Width="30"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="Input1Box"
								 Grid.Column="0"
								 Tag="input1.."
								 Text="input1.."
								 Foreground="Gray"
								 Background="Transparent"
								 BorderThickness="0"
								 Padding="10,0"
								 VerticalContentAlignment="Center"
								 GotFocus="TextBox_GotFocus"
								 LostFocus="TextBox_LostFocus"/>
						<Button Grid.Column="1"
								Click="BtnCopyInput2_Click"
								Background="Transparent"
								BorderThickness="0"
								Margin="0,0,5,0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/copy.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
						<Button Grid.Column="2"
								Click="BtnPasteInput2_Click"
								Background="Transparent"
								BorderThickness="0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/paste.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
					</Grid>
				</Border>

				<!-- Instruction -->
				<StackPanel Grid.Row="1"
            Grid.Column="0" Grid.ColumnSpan="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,20,0,10">
					<TextBlock Text="Instruction:"
							   Foreground="White"
							   VerticalAlignment="Center"
							   Margin="0,0,10,0"/>
					<ComboBox x:Name="TernInstructionCombo"
							  Width="120"
							  Style="{StaticResource RoundedComboBox}"
							  Margin="0,0,10,0">
						<ComboBoxItem Content="select" IsSelected="True"/>
						<ComboBoxItem Content="1"/>
						<ComboBoxItem Content="2"/>
						<ComboBoxItem Content="3"/>
						<ComboBoxItem Content="4"/>
					</ComboBox>
					<Button Content="⇅"
							Width="30" Height="30"
							Background="{StaticResource Brush.ToggleBorderHover}"
							BorderThickness="0"
							Foreground="White"
							Click="BtnSwapInputs_Click"/>
				</StackPanel>

				<!-- Input2 -->
				<TextBlock Grid.Row="2" Grid.Column="0"
						   Text="Input 2:"
						   Foreground="White"
						   VerticalAlignment="Center"
						   Margin="0,10,5,0"/>
				<Border Grid.Row="2" Grid.Column="1"
						Background="{StaticResource Brush.ToggleBackground}"
						CornerRadius="{StaticResource Corner.Standard}"
						Height="{StaticResource Height.Standard}"
						Margin="0,10,0,0">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition Width="30"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="Input2Box"
								 Grid.Column="0"
								 Tag="input2.."
								 Text="input2.."
								 Foreground="Gray"
								 Background="Transparent"
								 BorderThickness="0"
								 Padding="10,0"
								 VerticalContentAlignment="Center"
								 GotFocus="TextBox_GotFocus"
								 LostFocus="TextBox_LostFocus"/>
						<Button Grid.Column="1"
								Click="BtnCopyInput2_Click"
								Background="Transparent"
								BorderThickness="0"
								Margin="0,0,5,0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/copy.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
						<Button Grid.Column="2"
								Click="BtnPasteInput2_Click"
								Background="Transparent"
								BorderThickness="0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/paste.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
					</Grid>
				</Border>

				<!-- Output -->
				<TextBlock Grid.Row="3" Grid.Column="0"
						   Text="Output:"
						   Foreground="White"
						   VerticalAlignment="Center"
						   Margin="0,10,5,0"/>
				<Border Grid.Row="3" Grid.Column="1"
						Background="{StaticResource Brush.ToggleBackground}"
						CornerRadius="{StaticResource Corner.Standard}"
						Height="{StaticResource Height.Standard}"
						Margin="0,10,0,0">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="30"/>
							<ColumnDefinition Width="30"/>
						</Grid.ColumnDefinitions>
						<TextBox x:Name="TernOutputBox"
								 Grid.Column="0"
								 Tag="output.."
								 Text="output.."
								 Foreground="Gray"
								 Background="Transparent"
								 BorderThickness="0"
								 Padding="10,0"
								 VerticalContentAlignment="Center"
								 IsReadOnly="True"
								 GotFocus="TextBox_GotFocus"
								 LostFocus="TextBox_LostFocus"/>
						<Button Grid.Column="1"
								Click="BtnCopyOutput_Click"
								Background="Transparent"
								BorderThickness="0"
								Margin="0,0,5,0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/copy.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
						<Button Grid.Column="2"
								Click="BtnPasteOutput_Click"
								Background="Transparent"
								BorderThickness="0">
							<Image Source="pack://application:,,,/btmc;component/Assets/icons/paste.png"
								   Width="{StaticResource ActionButton.IconSize}"
								   Height="{StaticResource ActionButton.IconSize}"/>
						</Button>
					</Grid>
				</Border>
			</Grid>

			<!-- Convert Button -->
			<Border Grid.Row="6"
					HorizontalAlignment="Center"
					Margin="0,30,0,0"
					CornerRadius="{StaticResource Corner.Standard}"
					Background="{StaticResource Brush.Primary}">
				<Button x:Name="BtnConvert"
						Content="Convert"
						Width="75" Height="20"
						Background="Transparent"
						BorderThickness="0"
						Foreground="White"
						FontWeight="Bold"
						Click="BtnConvert_Click"/>
			</Border>

		</Grid>
	</Border>
</Window>
