<!-- Updated Main.xaml -->
<Window x:Class="btmc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Converter"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Form.style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#4A4A4A" CornerRadius="10" Padding="30">
        <StackPanel Width="600" HorizontalAlignment="Center">

            <TextBlock Text="Low-Level Language Calculator" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0 10"/>

            <!-- Toggle -->
            <StackPanel HorizontalAlignment="Center" Margin="0,20">
                <Border Width="191" Height="40" Background="#666" CornerRadius="20">
                    <Grid>
                        <ToggleButton x:Name="BtmcToggle" Content="BTMC" Style="{StaticResource ToggleTabStyle}" Width="100" IsChecked="True" Click="Toggle_Click"/>
                        <ToggleButton x:Name="TernToggle" Content="TERN" Style="{StaticResource ToggleTabStyle}" Width="100" Margin="100,0,0,0" Click="Toggle_Click"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- BTMC Form -->
            <StackPanel x:Name="BtmcPanel" Margin="0,10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Input:" Width="80" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox  Text ="Select" Width="120"/>
                    <TextBox x:Name="InputBox1" Width="300" TextChanged="InputBox1_TextChanged"/>
                </StackPanel>

                <Button Content="⇄" Width="60" HorizontalAlignment="Center" Margin="10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Output:" Width="80" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox Text="Select" Width="120"/>
                    <TextBox x:Name="OutputBox" Width="300" IsReadOnly="True"/>
                </StackPanel>
            </StackPanel>

            <!-- TERN Form -->
            <StackPanel x:Name="TernPanel" Visibility="Collapsed" Margin="0,10" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Input 1:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox x:Name="Input1Box" Width="300"/>
                    <Button Content="📋" Margin="5,0,0,0" Width="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Instruction:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <ComboBox x:Name="InstructionBox" Width="200"/>
                    <Button Content="⇄" Margin="5,0,0,0" Width="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Input 2:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox x:Name="Input2Box" Width="300"/>
                    <Button Content="📋" Margin="5,0,0,0" Width="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Output:" Width="80" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox x:Name="TernOutputBox" Width="300" IsReadOnly="True"/>
                    <Button Content="📋" Margin="5,0,0,0" Width="30"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Convert" Background="#00AEEF" Foreground="White" FontWeight="Bold" Width="120" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>
    </Border>
</Window>
