<Window x:Class="LowLevelLanguageCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Low Level Language Calculator" Height="500" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border Background="#3C3C3C" CornerRadius="10" BorderBrush="#555" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with minimize and close -->
            <DockPanel Grid.Row="0">
                <TextBlock Text="Low Level Language Calculator" FontSize="18" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="âˆ’" Width="30" Height="25" Background="Transparent" BorderThickness="0"
                            Foreground="White" Click="Minimize_Click"/>
                    <Button Content="âœ•" Width="30" Height="25" Background="Transparent" BorderThickness="0"
                            Foreground="White" Click="Close_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Divider -->
            <Rectangle Grid.Row="1" Fill="#888" Height="1" Margin="0,10"/>

            <!-- Toggle Buttons and Cleanup Icon -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="#5A5A5A" CornerRadius="18" Width="160" Height="35" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BTMCButton" Content="BTMC" Grid.Column="0" Background="Transparent" Foreground="#bbb"
                                FontWeight="Bold" BorderThickness="0" Click="BTMC_Click" Cursor="Hand"/>
                        <Button x:Name="TERNButton" Content="TERN" Grid.Column="1" Background="#AAAAAA" Foreground="White"
                                FontWeight="Bold" BorderThickness="0" Click="TERN_Click" Cursor="Hand"/>
                    </Grid>
                </Border>
                <Button Grid.Column="1" Content="ðŸ§¹" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="10,0,0,0" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Input 1 -->
            <Grid Grid.Row="3" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Input 1:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                <Border Background="#666" CornerRadius="5" Height="35">
                    <TextBox x:Name="Input1Box" Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="14" Padding="10,0"/>
                </Border>
                <Button Content="ðŸ“‹" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
                <Button Content="ðŸ“¥" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
            </Grid>

            <!-- Instruction -->
            <Grid Grid.Row="4" Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Instruction:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                <ComboBox x:Name="InstructionComboBox" Height="30" FontSize="14" Background="White" Foreground="Black">
                    <ComboBoxItem Content="select" IsSelected="True"/>
                    <ComboBoxItem Content="ADD"/>
                    <ComboBoxItem Content="SUB"/>
                    <ComboBoxItem Content="MUL"/>
                    <ComboBoxItem Content="DIV"/>
                </ComboBox>
                <Button Content="ðŸ”" Width="30" Height="30" Background="#5C5C5C" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
            </Grid>

            <!-- Input 2 -->
            <Grid Grid.Row="5" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Input 2:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                <Border Background="#666" CornerRadius="5" Height="35">
                    <TextBox x:Name="Input2Box" Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="14" Padding="10,0"/>
                </Border>
                <Button Content="ðŸ“‹" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
                <Button Content="ðŸ“¥" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
            </Grid>

            <!-- Output -->
            <Grid Grid.Row="6" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Output:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                <Border Background="#666" CornerRadius="5" Height="35">
                    <TextBox x:Name="OutputBox" Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="14" Padding="10,0" IsReadOnly="True"/>
                </Border>
                <Button Content="ðŸ“‹" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
                <Button Content="ðŸ“¥" Width="30" Height="30" Background="Transparent" BorderThickness="0"
                        Foreground="White" Margin="5,0,0,0"/>
            </Grid>

            <!-- Convert Button -->
            <Button Grid.Row="6" Content="Convert" Click="Convert_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Width="100" Height="35" Background="#00B2FF" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,40,0,0"/>
        </Grid>
    </Border>
</Window>
